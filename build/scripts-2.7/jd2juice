#general library
import os
from glob import glob

#3rd library
import numpy as np
import joblib

#cLoops
from cLoops.io import jd2hic
from cLoops.utils import jd2juiceHelp

if __name__ == "__main__":
    op = jd2juiceHelp()
    fs = glob(os.path.join(op.dir, "*.jd"))
    jd2hic(fs, op.output + "_juice.hic", op.cut, op.org,op.resolution)
